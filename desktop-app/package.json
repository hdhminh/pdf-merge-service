{
  "name": "pdf-stamp-desktop-app",
  "version": "1.1.0",
  "private": true,
  "description": "Desktop helper for managing bundled PDF backend + ngrok endpoint",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist:win": "electron-builder --win --x64 --dir",
    "dist:win:portable": "electron-builder --win portable --x64",
    "dist:dir": "electron-builder --dir"
  },
  "dependencies": {
    "@pdf-lib/fontkit": "^1.1.1",
    "express": "^5.2.1",
    "multer": "^1.4.5-lts.1",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^3.11.174"
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.huynhminh.pdfstampdesktop",
    "productName": "PDF Stamp Desktop",
    "extraResources": [
      {
        "from": "bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "signAndEditExecutable": false,
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
